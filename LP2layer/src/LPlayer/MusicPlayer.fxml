<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: linear-gradient(to top, #b5bcc6, #dee3e4);" stylesheets="@DarkTheme.css" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LPlayer.MusicPlayerController">
   <top>
      <MenuBar prefHeight="8.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#select_btn" text="Adicionar músicas" />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
   <left>
      <BorderPane prefHeight="311.0" prefWidth="209.0" BorderPane.alignment="CENTER">
         <center>
            <ListView fx:id="listview" onEditStart="#load_musics" onMouseClicked="#selectCurrentSong" prefHeight="266.0" prefWidth="213.0" BorderPane.alignment="CENTER" />
         </center>
         <top>
            <Label style="-fx-text-fill: black;" stylesheets="@DarkTheme.css" text="Músicas" BorderPane.alignment="CENTER" />
         </top>
         <bottom>
            <GridPane prefHeight="24.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Button alignment="CENTER" mnemonicParsing="false" onAction="#select_btn" prefHeight="25.0" prefWidth="156.0" text="Add" textAlignment="CENTER" />
                  <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="25.0" prefWidth="134.0" text="Remove" GridPane.columnIndex="1" />
               </children>
            </GridPane>
         </bottom>
      </BorderPane>
   </left>
   <center>
      <AnchorPane prefHeight="64.0" prefWidth="600.0" stylesheets="@DarkTheme.css" BorderPane.alignment="CENTER" />
   </center>
   <bottom>
      <GridPane prefHeight="54.0" prefWidth="600.0" BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="26.0" minHeight="10.0" prefHeight="22.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="46.0" minHeight="10.0" prefHeight="38.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="musica_atual" alignment="CENTER" contentDisplay="CENTER" prefHeight="21.0" prefWidth="303.0" style="-fx-text-fill: black;" stylesheets="@DarkTheme.css" text="Selecione alguma música" textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER" />
            <Button mnemonicParsing="false" onAction="#play_btn" text="Play" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets right="100.0" />
               </GridPane.margin></Button>
            <Button mnemonicParsing="false" onAction="#stop_btn" text="Stop" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <GridPane.margin>
                  <Insets left="100.0" />
               </GridPane.margin></Button>
         </children>
      </GridPane>
   </bottom>
</BorderPane>
